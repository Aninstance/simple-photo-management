# /etc/systemd/system/spm.staging.gunicorn.service

[Unit]
Description=Gunicorn daemon for SimplePhotoManagement
Before=nginx.service
After=network.target

[Service]
WorkingDirectory=/mnt/backupaninstancedatacenter/spm
ExecStart=/mnt/backupaninstancedatacenter/spm/venv/bin/gunicorn --name=SimplePhotoManagement --pythonpath=/mnt/backupaninstancedatacenter/spm/spm_api --bind unix:/tmp/spm.staging.gunicorn.socket --config /etc/gunicorn.d/gunicorn.py spm_api.wsgi:application
Restart=always
SyslogIdentifier=gunicorn
User=dan
Group=dan


[Install]
WantedBy=multi-user.target